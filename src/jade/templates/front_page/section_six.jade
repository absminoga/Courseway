//----------- Section Six ------------------
section.section_six#registration
   .container
      .section_title.registration_title
         .section_title_top зареєструйся зараз
         .section_title_bottom Та отримай задоволення від навчання
      form.form_registration.field_form(action="" method="post")
         .field_form_input
            .feedback_name.input_block
               input.entry_field.field_name#name(type="text" name="user_name" required )
               label.label_name(for="name") Name:
            .feedback_email.input_block
               input.entry_field.field_email#email.error(type="email" name="user_email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" title="Введите правильный формат Email")
               label.label_email(for="email" ) Email:
         input(type="submit" value="submit").form_btn